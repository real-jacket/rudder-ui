{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "es/**",
                "lib/**"
            ]
        },
        "deploy": {
            "dependsOn": [
                "build"
            ]
        },
        "clean": {
            "cache": false
        }
    }
}